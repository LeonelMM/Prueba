<%- model_class = Promotion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombreCliente) %>:</strong></dt>
  <dd><%= @promotion.nombreCliente %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha) %>:</strong></dt>
  <dd><%= @promotion.fecha %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vendedor) %>:</strong></dt>
  <dd><%= @promotion.vendedor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:medioComunicacion) %>:</strong></dt>
  <dd><%= @promotion.medioComunicacion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:promocion) %>:</strong></dt>
  <dd><%= @promotion.promocion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:acuerdos) %>:</strong></dt>
  <dd><%= @promotion.acuerdos %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              promotions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_promotion_path(@promotion), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              promotion_path(@promotion),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

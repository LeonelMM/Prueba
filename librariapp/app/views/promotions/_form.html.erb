<%= form_for @promotion, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nombreCliente, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombreCliente, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fecha, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fecha, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :vendedor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :vendedor, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :medioComunicacion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :medioComunicacion, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :promocion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :promocion, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :acuerdos, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :acuerdos, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                promotions_path, :class => 'btn' %>
  </div>
<% end %>
